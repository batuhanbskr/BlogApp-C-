@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Oluşturun</h1>

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Alıcı Mail Adresi")
    @Html.TextBoxFor(x=>x.ReceiverUser.WriterMail, new { @class = "form-control"})
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject, new { @class = "form-control"})
    <br />
    @Html.Label("Mesajınız")
    @Html.TextAreaFor(x=>x.MessageDetails, 10, 3, new { @class = "form-control"})
    <br />
    <button class="btn btn-info">Mesajı Gönder</button>
}